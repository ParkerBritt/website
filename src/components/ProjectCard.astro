---
const { project } = Astro.props;
const hrefLink = project.frontmatter.slug
  ? `/projects/${project.frontmatter.slug}`
  : project.frontmatter.link;
console.log(hrefLink)
---

<a href={hrefLink}>
    <div class="project-card">
        <h3>{project.frontmatter.title}</h3>
        <h3>{new Date(project.frontmatter.date).getFullYear()}</h3>
        {project.frontmatter.image && (
            <img src={project.frontmatter.image} alt={project.frontmatter.title} />
        )}
        <p>{project.frontmatter.description}</p>
    </div>
</a>

<style>
    .project-card {
        /* margin: 1rem auto 0; */
        background: #15181a;
        border-radius: 0.75rem;
        padding: 1rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.15s ease;
        height: 150px;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .project-card:hover {
        transform: translateY(-4px);
    }

    .project-card img {
        width: 100%;
        border-radius: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .project-card h3 {
        margin: 0.25rem 0;
    }

    .project-card p {
        font-size: 0.9rem;
    }

    .project-card p, h1, h2, h3{
        color: white;
    }

</style>
