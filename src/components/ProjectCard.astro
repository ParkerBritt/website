---
const { project } = Astro.props;
const hrefLink = project.frontmatter.slug
  ? `/projects/${project.frontmatter.slug}`
  : project.frontmatter.link;
console.log(hrefLink)

import { Image } from 'astro:assets';

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/project-thumbnails/*.{jpeg,jpg,png,gif}");
---

<a href={hrefLink}>
    <div class="project-card">
        {project.frontmatter.image && (
            <div class="image-titles">
                <h1>{project.frontmatter.title}</h1>
            </div>
            <div class="card-image-overlay"/>
            <Image
                src={images['/src/assets/project-thumbnails/'+project.frontmatter.image]()} 
                onload="this.classList.add('loaded')"
                alt=""
            />
        )}
        {!project.frontmatter.image && (
            <h3>{project.frontmatter.title}</h3>
            <h3>{new Date(project.frontmatter.date).getFullYear()}</h3>
            <p>{project.frontmatter.description}</p>
        )}
        
    </div>
</a>

<style>
    .project-card {
        /* margin: 1rem auto 0; */
        background: #15181a;
        border-radius: 0.75rem;
        padding: 1rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.15s ease;
        height: 300px;

        position: relative;
        overflow: hidden;
    }

    .image-titles
    {

        position: absolute;

        top: 0px;
        left: 0px;

        display: flex;

        align-items: center;
        justify-content: center;
        text-align: center;

        width: 100%;
        height: 100%;
        z-index: 3;

        opacity: 0;
        transition: opacity 0.5s ease;
        transition: transform 0.5s ease;

        transform: scale(0.9);
    }

    .project-card:hover .image-titles
    {
        opacity: 1;
        transform: scale(1);
    }

    .card-image-overlay
    {
        position: absolute;
        opacity: 0;

        top: 0;
        left: 0px;
        width: 100%;
        min-height: 100%;
        object-fit: cover;

        backdrop-filter: blur(5px);
        background-color: rgba(0,0,0,0.05);
        z-index: 1;
        transition: opacity 0.5s ease;
    }

    .project-card:hover .card-image-overlay
    {
        opacity: 100;
    }

    img
    {
        top: 0px;
        left: 0px;
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease-in-out;

        opacity: 0;

        transform: scale(1.2);
        transition: transform 1s ease-in-out, opacity 2s ease;
    }

    img.loaded
    {
        opacity: 1;
        transform: scale(1);
    }

    .project-card:hover img
    {
        transform: scale(1.05);
        transition: transform 1s ease-in-out;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    /* .project-card:hover { */
    /*     transform: translateY(-4px); */
    /* } */

    .project-card img {
        width: 100%;
        border-radius: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .project-card h3 {
        margin: 0.25rem 0;
    }

    .project-card p {
        font-size: 0.9rem;
    }

    .project-card p, h1, h2, h3{
        color: white;
    }

    .project-card h1
    {
        font-size: 1.8rem;
    }

</style>
