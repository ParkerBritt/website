---
import '../styles/global.css'
import NavbarButton from '../components/NavbarButton.astro'
---

<div class="navbarContainer">
    <div class="navbar">
        <div class="navSections">
            <NavbarButton text=Home />
            <NavbarButton text=About />
            <NavbarButton text=Showreel />
            <NavbarButton text=Contact />
        </div>
    </div>
</div>


<style>
    .navbarContainer
    {
        position: absolute;
        top: 0;
        width: 100%;
        height:100%;
    }

    .navbar
    {
        position: sticky;
        top: 0;

        width: 100%;
        height: 50px;
        padding-top: 5px;
        background: transparent;
        z-index: 4;

        transition-duration: 2s;
    }

    .navbar[data-scrolled="true"] {
        backdrop-filter: blur(50px);
    }

    .navSections
    {
        display: flex;

        align-items: center;
        justify-content: space-around;

        height: 100%;
        width: 30%;
    }
</style>

<script>
  const THRESHOLD = 400;
  const navbar = document.querySelector('.navbar');

  function update() {
    const scrolled = window.scrollY > THRESHOLD;
    navbar?.setAttribute('data-scrolled', scrolled ? 'true' : 'false');
  }

  window.addEventListener('scroll', update, { passive: true });
  window.addEventListener('load', update);
  update();
</script>
