---
import '../styles/global.css'
import NavbarButton from '../components/NavbarButton.astro'

export interface Props {
    page?: string;
    links?: { text: string; href?: string }[];
}

// defaults
const {
    page='',
    links = [
        { text: 'Home',    href: '/#hero' },
        { text: 'Projects',href: '/#projects' },
        { text: 'About',   href: '/about' },
        { text: 'Github', href: 'https://github.com/parkerbritt' },
    ],
} = Astro.props;
---

<div class="navbar" data-page={page.toLowerCase()}>
    <div class="navSections">
        {links.map((l) => <NavbarButton text={l.text} href={l.href} isActive={l.text.toLowerCase()===page.toLowerCase()}/>)}
    </div>
</div>


<style>

    .navbar
    {
        display: flex;

        position: sticky;
        top: 0;

        width: 100%;
        height: 50px;

        padding: 0px;

        background: transparent;
        z-index: 4;

        transition-duration: 2s;
    }

    .navbar[data-page="home"]
    {
        position: fixed;
    }

    .navbar[data-scrolled="true"] {
        backdrop-filter: blur(20px);
    }

    .navSections
    {
        display: flex;

        align-items: center;
        justify-content: space-around;

        height: 100%;
        width: clamp(350px, 50%, 500px);
    }

    @media (max-width: 600px) {
        .navbar
        {
            justify-content: center;
        }

        .navSections
        {
            width: 100%;
        }
    }
</style>

<script>
    const THRESHOLD = 80;
    const navbar = document.querySelector('.navbar');

    function update() {
        const scrolled = window.scrollY > THRESHOLD;
        navbar?.setAttribute('data-scrolled', scrolled ? 'true' : 'false');
    }

    window.addEventListener('scroll', update, { passive: true });
    window.addEventListener('load', update);
    update();
</script>
